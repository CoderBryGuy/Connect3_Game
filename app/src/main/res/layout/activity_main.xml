<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="409dp"
            android:layout_height="409dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:rowCount="3" app:columnCount="3"
            android:background="@drawable/board">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" app:srcCompat="@drawable/red" app:layout_row="0"
                app:layout_column="0"
                android:id="@+id/imageView1"
                android:layout_margin="10dp"
                android:layout_marginLeft="15dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="0"
                app:layout_column="1"
                android:id="@+id/imageView2"
                android:layout_marginLeft="32dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="0"
                app:layout_column="2"
                android:id="@+id/imageView3"
                android:layout_marginLeft="32dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="1"
                app:layout_column="0"
                android:id="@+id/imageView4"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView5"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="1"
                app:layout_column="2"
                android:id="@+id/imageView6"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="2"
                app:layout_column="0"
                android:id="@+id/imageView7" android:layout_marginTop="30dp" android:layout_marginLeft="15dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"

                app:layout_row="2"
                app:layout_column="1"
                android:id="@+id/imageView8" android:layout_marginLeft="32dp" android:layout_marginTop="30dp"
                android:onClick="dropIn"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/red"
                app:layout_row="2"
                app:layout_column="2"
                android:id="@+id/imageView9" android:layout_marginLeft="32dp" android:layout_marginTop="30dp"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>